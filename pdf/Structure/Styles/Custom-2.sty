%%%%%%%%%%%%%%      FONTS
\setmainfont{Aptos Serif}
\setsansfont{Aptos}
\setmonofont{JetBrainsMono Nerd Font Mono}

%%%%%%%%%%%%%%      PAGE FORMAT
\geometry{
  a4paper,
  twoside=false,       % identical left/right pages (no mirroring)
  left=2cm,
  right=2cm,
  top=2.5cm,
  bottom=2.5cm,
  includefoot,         % include footer area in the total page layout
  voffset=0pt,
  hoffset=-2pt,
  headheight=54pt,
  headsep=\baselineskip,
  footskip=15pt,       % smaller gap between text and footer
  footnotesep=10pt
  %showframe           % uncomment to visualize margins
}

%%%%%%%%%%%%%	FOOTNOTES
\makeatletter
\renewcommand\footnoterule{%
  \vskip 10pt % Space above the line
  \hrule width 0.4\columnwidth height 0.4pt
  \kern 5pt  % Space below the line
}
\makeatother

